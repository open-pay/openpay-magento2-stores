<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">    
    <body>
        <referenceContainer name="checkout.success">
            <container 
                name="order.success.additional.info"
                htmlTag="div" 
                htmlClass="order-success-additional-info" 
                after="-" />
        </referenceContainer> 

        <referenceContainer name="order.success.additional.info">
            <block class="Openpay\Stores\Block\Checkout\Success" 
                name="checkout.success.openpay_stores" 
                template="Openpay_Stores::success.phtml" 
                cacheable="false"/>
            <block class="Magento\Checkout\Block\Registration" 
                name="checkout.registration" 
                template="registration.phtml" 
                cacheable="false"/>
        </referenceContainer>
    </body>
</page>
