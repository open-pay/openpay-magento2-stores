<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="openpay" type="host">*.openpay.mx</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="openpay-img" type="host">*.postimg.cc</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="paynet" type="host">*.paynet.com.mx</value>
                <value id="openpay-dashboard" type="host">*.openpay.mx</value>
                <value id="openpay-dashboard-co" type="host">*.openpay.co</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>